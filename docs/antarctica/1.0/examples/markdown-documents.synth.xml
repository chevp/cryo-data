<?xml version="1.0" encoding="UTF-8"?>
<!--
  Antarctica Markdown Documents Example
  A simple project demonstrating markdown text file management

  Protocol Version: 1.0.0
  Schema: synth-protocol
-->
<synthProject xmlns="https://chevp.github.io/synth-protocol/schema/synth/project/1.0"
              xmlns:core="https://chevp.github.io/synth-protocol/schema/synth/core/1.0">

    <!-- FILE HEADER -->
    <header>
        <magic>SYNTH</magic>
        <formatVersion>1</formatVersion>
        <schemaVersion>1.0.0</schemaVersion>
        <createdAt>1733580000000</createdAt>
        <modifiedAt>1733580000000</modifiedAt>
        <compressed>false</compressed>
        <compressionType>NONE</compressionType>
    </header>

    <!-- PROJECT ROOT -->
    <project>
        <core:entityId>
            <uuid>proj_antarctica_markdown</uuid>
            <version>1</version>
            <createdAt>1733580000000</createdAt>
            <updatedAt>1733580000000</updatedAt>
        </core:entityId>
        <name>Antarctica Markdown Documents</name>
        <description>Example project for managing markdown text files</description>
        <schemaVersion>1.0.0</schemaVersion>
        <settings>
            <defaultSceneId>scene_docs</defaultSceneId>
            <autoSaveEnabled>true</autoSaveEnabled>
            <autoSaveIntervalSeconds>60</autoSaveIntervalSeconds>
        </settings>
    </project>

    <!-- TAGS -->
    <tags>
        <tag>
            <core:entityId>
                <uuid>tag_published</uuid>
                <version>1</version>
            </core:entityId>
            <name>Published</name>
            <color>#4CAF50</color>
            <category>status</category>
        </tag>
        <tag>
            <core:entityId>
                <uuid>tag_draft</uuid>
                <version>1</version>
            </core:entityId>
            <name>Draft</name>
            <color>#FFC107</color>
            <category>status</category>
        </tag>
    </tags>

    <!-- CLUSTER NODES -->
    <clusterNodes>
        <!-- Root Scene -->
        <node>
            <core:entityId>
                <uuid>scene_docs</uuid>
                <version>1</version>
            </core:entityId>
            <name>Documents</name>
            <nodeType>CLUSTER_NODE_TYPE_SCENE</nodeType>
            <state>CLUSTER_NODE_STATE_ACTIVE</state>
            <childIds>
                <id>folder_articles</id>
                <id>folder_notes</id>
            </childIds>
            <siblingOrder>0</siblingOrder>
        </node>

        <!-- Articles Folder -->
        <node>
            <core:entityId>
                <uuid>folder_articles</uuid>
                <version>1</version>
            </core:entityId>
            <name>Articles</name>
            <nodeType>CLUSTER_NODE_TYPE_FOLDER</nodeType>
            <state>CLUSTER_NODE_STATE_ACTIVE</state>
            <parentId>scene_docs</parentId>
            <childIds>
                <id>doc_getting_started</id>
                <id>doc_best_practices</id>
            </childIds>
            <siblingOrder>0</siblingOrder>
        </node>

        <!-- Notes Folder -->
        <node>
            <core:entityId>
                <uuid>folder_notes</uuid>
                <version>1</version>
            </core:entityId>
            <name>Notes</name>
            <nodeType>CLUSTER_NODE_TYPE_FOLDER</nodeType>
            <state>CLUSTER_NODE_STATE_ACTIVE</state>
            <parentId>scene_docs</parentId>
            <childIds>
                <id>doc_ideas</id>
            </childIds>
            <siblingOrder>1</siblingOrder>
        </node>

        <!-- Getting Started Document -->
        <node>
            <core:entityId>
                <uuid>doc_getting_started</uuid>
                <version>1</version>
            </core:entityId>
            <name>Getting Started</name>
            <nodeType>CLUSTER_NODE_TYPE_DOCUMENT</nodeType>
            <state>CLUSTER_NODE_STATE_ACTIVE</state>
            <parentId>folder_articles</parentId>
            <siblingOrder>0</siblingOrder>
            <tagIds>
                <id>tag_published</id>
            </tagIds>
            <metadata>
                <entry key="format">markdown</entry>
                <entry key="mime_type">text/markdown</entry>
            </metadata>
        </node>

        <!-- Best Practices Document -->
        <node>
            <core:entityId>
                <uuid>doc_best_practices</uuid>
                <version>1</version>
            </core:entityId>
            <name>Best Practices</name>
            <nodeType>CLUSTER_NODE_TYPE_DOCUMENT</nodeType>
            <state>CLUSTER_NODE_STATE_ACTIVE</state>
            <parentId>folder_articles</parentId>
            <siblingOrder>1</siblingOrder>
            <tagIds>
                <id>tag_draft</id>
            </tagIds>
            <metadata>
                <entry key="format">markdown</entry>
                <entry key="mime_type">text/markdown</entry>
            </metadata>
        </node>

        <!-- Ideas Document -->
        <node>
            <core:entityId>
                <uuid>doc_ideas</uuid>
                <version>1</version>
            </core:entityId>
            <name>Ideas</name>
            <nodeType>CLUSTER_NODE_TYPE_DOCUMENT</nodeType>
            <state>CLUSTER_NODE_STATE_ACTIVE</state>
            <parentId>folder_notes</parentId>
            <siblingOrder>0</siblingOrder>
            <tagIds>
                <id>tag_draft</id>
            </tagIds>
            <metadata>
                <entry key="format">markdown</entry>
                <entry key="mime_type">text/markdown</entry>
            </metadata>
        </node>
    </clusterNodes>

    <!-- COMPONENTS (Text Content) -->
    <components>
        <!-- Getting Started Content -->
        <component>
            <core:entityId>
                <uuid>comp_getting_started_text</uuid>
                <version>1</version>
            </core:entityId>
            <clusterNodeId>doc_getting_started</clusterNodeId>
            <componentType>text_content</componentType>
            <state>COMPONENT_STATE_ENABLED</state>
            <schemaVersion>1.0.0</schemaVersion>
